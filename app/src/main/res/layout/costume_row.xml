<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="7dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="@drawable/roundbackground"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:gravity="left"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:text="GOLDMAN SACHS"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/job_type"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/company_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="235dp"
        android:gravity="center"
        android:text="Type : Internship"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/company_type"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/company_name"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Dream"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/rec_date"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/job_type"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:text="Date : 25-12-2018"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/ded_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rec_date"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:text="deadline : 25-12-2018"
        android:textSize="20dp" />

    <Button
        android:id="@+id/apply_btn"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@+id/job_type"
        android:layout_alignParentRight="true"
        android:background="@drawable/roundbutton"
        android:text="Apply"
        android:textColor="#ffff"
        android:textSize="18dp" />


</RelativeLayout>

</RelativeLayout>